<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_round"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="40dp"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textSize="60dp"
                    android:text="5"/>
                <TextView
                    android:text="@string/label_score"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:paddingRight="20dp"/>
                <ImageView
                    android:id="@+id/attempt_one"
                    android:layout_width="15dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/stroke_bg"/>
                <ImageView
                    android:id="@+id/attempt_two"
                    android:layout_width="15dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/stroke_bg"/>
                <ImageView
                    android:id="@+id/attempt_three"
                    android:layout_width="15dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/stroke_bg"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight=".7"
            android:gravity="center"
            android:text="@string/label_quiz_question"/>
        <TextView
            android:id="@+id/power_ups"
            android:background="@drawable/circle_bg"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:gravity="center"
            android:textSize="30dp"
            android:text="1"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/next_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Next"
            android:visibility="visible"/>
    </LinearLayout>

    <GridView
        android:id="@+id/list_movies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:choiceMode="singleChoice"/>
</LinearLayout>